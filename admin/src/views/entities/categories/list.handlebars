<div class="row">
  <div class="col-sm">
    <h1>Categories</h1>

    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Index</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{index}}</td>
            <td>
              <a class="btn btn-dark" href="/categories/edit/{{id}}">Edit</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <a class="btn btn-dark" href="/categories/create">Create new</a>
  </div>
</div>
