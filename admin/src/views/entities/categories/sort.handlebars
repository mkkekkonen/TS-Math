<div class="row">
  <div class="col-sm">
    <h1>Sort Categories</h1>
    
    <ol id="sortCategories" class="sort-container">
      {{#each categories}}
        <li class="sortable-item badge-secondary">
          <span>#{{id}} {{name}}</span>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<script>
  $(function() {
    makeSortable('#sortCategories');
  });
</script>
