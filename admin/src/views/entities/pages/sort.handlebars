<div class="col-sm">
  <div class="col-sm">
    <h1>Sort Pages</h1>

    <ol id="sortPages" class="sort-container">
      {{#each pages}}
        <li class="sortable-item badge-secondary">
          <span>#{{id}} {{name}}</span>
        </li>
      {{/each}}
    </ol>
  </div>
</div>

<script>
  makeSortable('#sortPages');
</script>
