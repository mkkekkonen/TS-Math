{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": ["webpack.config.js"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".ts"]
        }
      }
    }
}
